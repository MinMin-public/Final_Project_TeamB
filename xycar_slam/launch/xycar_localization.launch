<launch>

  <param name="robot_description" textfile="$(find xycar_slam)/urdf/xycar.urdf" />
  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" />
  
  <!--rosbag-->
  <node pkg="rosbag" type="play" name="rosbag_play" required="true" args="-r 1 -l $(find xycar_slam)/lidar_camera_fast.bag"/>
  
  <!--carto-->
  <node name="cartographer_node" pkg="cartographer_ros" type="cartographer_node" args="
    -configuration_directory $(find xycar_slam)/config 
    -configuration_basename xycar_localization_v1.lua
    -load_state_filename $(find xycar_slam)/maps/lidar_camera.pbstream" />

  <!--node name="stanley_control" pkg="xycar_slam" type="stanley_follwer.py" /-->
   
  <!--rviz-->
  <node name="rviz" pkg="rviz" type="rviz" args="-d $(find xycar_slam)/rviz/localization.rviz" />
  
</launch>
